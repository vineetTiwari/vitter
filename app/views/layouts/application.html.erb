<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag image_path('favicon.ico') %>
  <title>Thotle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="background-image">
    <div class="header-nav col-md-12">

        <div class="col-md-2">
          <%= link_to root_path, class: 'link-font' do %>
          <i class="fa fa-home"></i>  Home
          <% end %>
        </div> 

        <% if logged_in? %>
          <div class="col-md-9"> </div>

          <div class="col-md-1">
          <%= link_to session_path(:user), method: :delete, class: 'link-font' do %>
          <i class= "fa fa-sign-out"></i>  Sigh Out
          <% end %>
          <%= current_user.id %>
          </div>
        
        <% else %>
          <div class="col-md-8"> </div>

          <div class="col-md-1">
            <%= link_to 'Log in', new_session_path, class: 'link-font' %>
          </div> 

          <div class="col-md-1">
            <%= link_to 'Sign up', root_path, class: 'link-font' %>
          </div>

      <% end %>  
    
    </div>

    <%= yield %>
  </div>
</body>
</html>
