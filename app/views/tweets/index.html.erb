<div class="col-md-2">
</div>

<div class="col-md-8">
  <div class="well">
    <div class="centered">
      <h1>Vitter</h1>
    </div>  
    <% @tweets.each do |tweet| %>
      <div class="post-list">
        <p><%= tweet.body %>&nbsp;&nbsp;<%= link_to "Delete", tweet_path(tweet), method: :delete, data: {confirm:"Are you sure?"}, class: "btn btn-sm btn-primary delete-button"  %></p>

        <% tweet.comments.each do |x| %>
          <div class="post-list">
              <p><%= x.body %>&nbsp;&nbsp;<%= link_to "Delete", tweet_comment_path(tweet, x), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-primary delete-button" %></p>
          </div>
        <% end %>

        <%= form_for [tweet, @comment] do |comment| %>
          <div class="row">
            <div class="spacing">
              <%= comment.text_field :body, class: "comment-control", id: "inputSuccess",  placeholder: "comment..." %>
            </div>
          </div>
        <% end %>

        <hr>
      </div>
    <% end %>
    <%= render "form" %>
  </div>
</div>

<div class="col-md-2">
</div>

